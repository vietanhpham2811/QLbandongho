	<script src="~/LayoutKhachHang/js/jquery-3.2.1.min.js"></script>
	<script src="~/LayoutKhachHang/styles/bootstrap4/popper.js"></script>
	<script src="~/LayoutKhachHang/styles/bootstrap4/bootstrap.min.js"></script>
	<script src="~/LayoutKhachHang/plugins/Isotope/isotope.pkgd.min.js"></script>
	<script src="~/LayoutKhachHang/plugins/OwlCarousel2-2.2.1/owl.carousel.js"></script>
	<script src="~/LayoutKhachHang/plugins/easing/easing.js"></script>
	<script src="~/LayoutKhachHang/js/custom.js"></script>
	<script src="~/libararyadmin/js/plugins/toastr/toastr.min.js"></script>
	<script src="~/plugin/xnoti.js"></script>

	<script src="~/LayoutKhachHang/plugins/jquery-ui-1.12.1.custom/jquery-ui.js"></script>

	<script>
		var myController = {
			init: function () {
				myController.regesterEvent();
				myController.LoadData();
			},

			regesterEvent:function(){

				$('#btnThoat').off('click').on('click', function () {
					$.ajax({
						url: '/Admin/Home/LogoutClient',
						type: 'GET',
						dataType: 'json',
						success: function (response) {
							if (response.status) {
								window.open('/Product/Product', "_self");

							}
						}
					})
				});
			},

			LoadData: function () {
				$.ajax({
					url: '/Admin/Home/LoadData',
					type: 'GET',
					dataType: 'json',
					success: function (response) {
						if (response.status) {
							var lstUserName = response.lstUserName;

							if (lstUserName != null) {
								$("#userName").html(lstUserName.hoTen + '<i class="fa fa-angle-down"></i>');
								$("#showDangKy").hide();
								$("#ShowThoat").show();
							}
						}else{
							$("#userName").html('Tài khoản<i class="fa fa-angle-down"></i>');
							$("#showDangKy").show();
							$("#ShowThoat").hide();
						}
					}
				})
			},
		}
		myController.init();
	</script>
	@await RenderSectionAsync("Scripts", required: false)
	<script src="~/layoutkhachhang/js/single_custom.js"></script>
	<script src="~/layoutkhachhang/js/categories_custom.js"></script>

</body>

</html>
